<Window x:Class="MyMusicBase.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMusicBase"
        mc:Ignorable="d"
        Title="StartPage" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBox Name="SearchBox" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Text="Что ищем" ></TextBox>
        <TextBox Name ="Result" TextWrapping="Wrap"  Grid.Row="1" Grid.RowSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></TextBox>
        <Button Name ="Search" Grid.Row="5" Click="Search_OnClick">Search</Button>
    </Grid>
</Window>
